<h1 class="row justify-content-center">create new article</h1>


<div class="row justify-content-center">
  <div class="col-8">
  <%= render 'shared/errors',obj: @article %>
    <%= form_with scope: :article, url: articles_path, class:"shadow p-3 mb-5 bg-info rounded", local: true do |f|%>
    
      <div class="form-group row"> 
        <%=f.label :title, class:"col-2 col-form-label"%>
        <div class="col-8">
          <%=f.text_field :title, class:"form-control shadow rounded"%>
        </div>
      </div>
      <div class="form-group row"> 
        <%=f.label :created_on, class:"col-2 col-form-label"%>
        <div class="col-8">
          <%=f.date_field :created_on, class:"form-control shadow rounded"%>
        </div>
      </div>

      <div class="form-group row"> 
        <%=f.label :Category, class:"col-2 col-form-label"%>
        <div class="col-8">
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" })%>
        </div>
      </div>
    
      <div class="form-group row justify-content-center">
          <%=f.submit class:"btn btn-outline-dark btn-lg"%>
      </div>


    <% end %>
  

  </div>
</div>